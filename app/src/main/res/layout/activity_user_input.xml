<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserInputActivity"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/purple"
        android:paddingHorizontal="20dp"
        >

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/emergencyBtn"
            android:fontFamily="@font/roboto"
            android:text="@string/inputTopic"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/emergencyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:background="@color/purple"
            android:contentDescription="Emergency Call" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/info_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:autofillHints="@string/hintInfo"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="15dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/hintInfo"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:textColor="@color/blueText" />

            <Button
                android:id="@+id/camera_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_id"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_2"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:text="@string/cameraBtn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!--    <LinearLayout-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content">-->
            <!--        -->
            <!--    </LinearLayout>-->

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/camera_btn"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/roboto"
                android:paddingVertical="15dp"
                android:text="@string/submitBtn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>


    </ScrollView>

    <include
        android:id="@+id/tablayout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        layout="@layout/tablayout"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>